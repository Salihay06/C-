#include <iostream>
using namespace std;

const int MAX_SIZE = 5; // Yığının alabileceği maksimum eleman sayısı [cite: 3471]

class Stack {
private:
    int arr[MAX_SIZE]; // Verileri tutacak dizi
    int top;           // En üstteki elemanın yerini tutan imleç [cite: 3472]

public:
    // Kurucu Fonksiyon: Yığın boş başlar, o yüzden top -1'dir.
    Stack() {
        top = -1; 
    }

    // Yığın boş mu kontrolü
    bool isEmpty() {
        return (top == -1);
    }

    // Yığın dolu mu kontrolü
    bool isFull() {
        return (top == MAX_SIZE - 1);
    }

    // PUSH: Yığına eleman ekleme
    void push(int element) {
        if (!isFull()) {
            /* DİKKAT: Verilen kaynak kodda burada bir mantık hatası var.
               top -1 iken arr[top] yazmaya çalışıyor.
               Doğrusu önce top'ı arttırmak olmalıydı: arr[++top] = element; */
            
            // Kaynaktaki orijinal sıra:
            arr[top] = element; 
            top++;  [cite: 3473]
            
            cout << "Pushed element: " << element << " onto the stack.\n";
        } else {
            cout << "Stack is full. Cannot push element " << element << ".\n"; [cite: 3474]
        }
    }

    // POP: Yığından eleman çıkarma
    void pop() {
        if (!isEmpty()) {
            int poppedElement = arr[top];
            top--; [cite: 3476]
            cout << "Popped element: " << poppedElement << " from the stack.\n";
        } else {
            cout << "Stack is empty. Cannot pop from an empty stack.\n"; [cite: 3477]
        }
    }

    // TOP: En üstteki elemanı görme (silmeden)
    int topElement() {
        if (!isEmpty()) {
            return arr[top];
        } else {
            cout << "Stack is empty.\n"; [cite: 3479]
            return -1; 
        }
    }
};

int main() {
    Stack myStack;
    // Yığın dolana kadar eleman ekle (1'den 5'e kadar)
    for (int i = 1; i <= 5; ++i) {
        myStack.push(i); [cite: 3481]
    }
    
    // Dolu yığına eleman eklemeye çalış (Hata vermeli)
    myStack.push(6); [cite: 3482]

    // Yığın boşalana kadar eleman çıkar
    while (!myStack.isEmpty()) {
        myStack.pop(); [cite: 3483]
    }
    return 0;
}
